<%- include('layouts/head') %>
<div class="ui middle aligned center aligned grid">
    <div class="column w450">
        <h2 class="ui teal image header">
            <img src="/images/logo.png" class="image">
            <div class="content">
                注册你的帐号
            </div>
        </h2>
        <%- include('layouts/notification') %>
        <form class="ui large form" method="post" action="/signup.vpage">
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="username" placeholder="用户名">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" placeholder="密码">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="repassword" placeholder="确认密码">
                    </div>
                </div>
                <button class="ui fluid large teal submit button">注册</button>
            </div>

            <div class="ui error message"></div>

        </form>

        <div class="ui message">
            已有帐号? <a href="/signin.vpage">登录</a>
        </div>
    </div>
</div>
</body>
<script type="text/javascript">
    require(['jquery', 'knockout', 'semantic'], function($, ko){
        var self = this;

        self.text = ko.observable('测试文字');

        ko.applyBindings(self);

        $('.ui.dropdown').dropdown();
    });
</script>
</html>
